    <link href="~/assets/fonts/fontawe4/font-awesome.min.css" rel="stylesheet" />
    <link href="~/assets/lib/bootstrap4/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/lib/ScrollBar/perfect-scrollbar.css" rel="stylesheet" />
    <script src="~/assets/lib/ScrollBar/perfect-scrollbar.js"></script>
    <link href="~/assets/lib/toastr.css" rel="stylesheet" />
    <script src="~/assets/lib/jquery3/jquery.min.js"></script>
    <script src="~/assets/lib/toastr.js"></script>
    <!-- jQuery 3 -->
    <!-- Bootstrap 4 -->
