<body>
    <!-- ======= Header ======= -->
    <header id="header">
        <div class="header-top">
            <div class="bg-overlay"></div>
            <div class="container">
                <div class="header-top-wrapper d-flex">
                    <div class="header-left d-flex">
                        <div class="text">
                            <h2 style="font-weight:bold">Quản Lý Các Khu Công Nghiệp Tỉnh Vĩnh Phúc</h2>
                        </div>
                    </div>
                    <nav id="menu_pc" class="nav-menu d-lg-block d-md-block d-none">
                        <ul>
                            <li ref="trang-chu"><a href="~/"><i class="fas fa-arrow-left"></i> Thoát</a></li>
                            <li ref="dang-nhap"><a href="~/dang-nhap"><i class="fas fa-sign-in"></i> Đăng nhập</a></li>
                            <li ref="dang-ky"><a href="~/dang-ky"><i class="far fa-file-contract"></i> Đăng ký</a></li>
                        </ul>
                    </nav>

                    <input type="checkbox" id="overlay-input" />
                    <label for="overlay-input" id="overlay-button"><span></span></label>
                    <div id="overlay" class="menu_mobile">
                        <ul>
                            <li ref="trang-chu"><a href="~/"><i class="fas fa-arrow-left"></i> Thoát</a></li>
                            <li ref="dang-nhap"><a href="~/dang-nhap">Đăng nhập</a></li>
                            <li ref="dang-ky"><a href="~/dang-ky">Đăng ký</a></li>
                        </ul>
                    </div>

                </div>
            </div>
        </div>
    </header>
